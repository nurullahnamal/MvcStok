@using MvcStok.Models.Entity
@model PagedList.IPagedList<TBLKATEGORILER>
    @using PagedList;
    @using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>KATEGORI ID</th>
        <th>KATEGORI ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>

    </tr>

    <tbody>
        @foreach(var ktgr in Model)
            {
                <tr>
                    <td>@ktgr.KATEGORIID</td>
                    <td>@ktgr.KATEGORIAD</td>
                    <td><a href="/KATEGORI/SIL/@ktgr.KATEGORIID" class="btn btn-danger">SİL</a></td>
                    <td><a href="/KATEGORI/KategoriGetir/@ktgr.KATEGORIID" class="btn btn-success">GUNCELLE</a></td>
                </tr>
            }
    </tbody>
</table>

@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new {sayfa}))
<a href="/KATEGORI/YeniKategori/" class="btn btn-primary"> YENİ KATEGORI EKLE</a>

